<?xml version="1.0" encoding="UTF-8"?>
<addons>

<addon id="plugin.program.doomzdaysimple" name="[B][COLOR=red]Doomzday Simple Wizard[/COLOR][/B]" version="3.0.1" provider-name="DD Team">
	<requires>
		<import addon="xbmc.python" version="3.0.0"/>
		<import addon="script.module.requests" optional="true" />
	</requires>
	<extension point="xbmc.python.pluginsource" library="addon.py">
		<provides>executable</provides>
	</extension>
	<extension point="xbmc.service" library="service.py" />
	<extension point="xbmc.addon.metadata">
		<summary lang="en_GB">Doomzday Simple Wizard</summary>
		<description lang="en_GB">[COLOR=red]Doomzday Community Builds[/COLOR]</description>
		<disclaimer lang="en_GB">This Addon contains no content</disclaimer>
		<language>en</language>
		<platform>all</platform>
		<license>GPL-2.0-or-later</license>
		<forum></forum>
		<website></website>
		<email></email>
		<source></source>
		<assets>
				<icon>icon.png</icon>
				<fanart>fanart.jpg</fanart>
				<banner></banner>
				<clearlogo></clearlogo>
				<screenshot></screenshot>
		</assets>
	</extension>
</addon>

<addon id="repository.doomzday" name="Doomzday Repo" version="1.1.0" provider-name="DD Team">
    <extension point="xbmc.addon.repository" name="Doomzday Repo">
		<dir>
			<info compressed="false">https://raw.githubusercontent.com/nzkaize/nzkaize.github.io/main/simple/_zipfiles/addons.xml</info>
			<checksum>https://raw.githubusercontent.com/nzkaize/nzkaize.github.io/main/simple/_zipfiles/addons.xml.md5</checksum>
			<datadir zip="true">https://raw.githubusercontent.com/nzkaize/nzkaize.github.io/main/simple/_zipfiles/</datadir>
			<hashes>false</hashes>
		</dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Doomzday Repository</summary>
        <description lang="en_GB">Repo from the Doomzday Team for you.</description>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
			<fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>

</addons>
